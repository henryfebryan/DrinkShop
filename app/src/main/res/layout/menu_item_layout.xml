<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/corner_radius_cardview"
    app:cardElevation="@dimen/elevation_cardview"
    app:contentPadding="@dimen/padding_cardview"
    app:cardBackgroundColor="@android:color/white"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_product"
            android:layout_width="150dp"
            android:layout_height="200dp" />
        <TextView
            android:id="@+id/txt_menu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category 0"
            android:textSize="@dimen/size_font_title_cardview"
            android:gravity="center"/>
    </LinearLayout>

</android.support.v7.widget.CardView>